---
interface Props {
  title: string;
  slug: string;
  tagline: string;
  status: string;
  type: string;
  techStack: string[];
  liveUrl: string | null;
}

const { title, slug, tagline, status, type, techStack, liveUrl } = Astro.props;

const statusColors: Record<string, string> = {
  'launched': 'bg-inc-lime/20 text-inc-lime',
  'beta': 'bg-inc-cyan/20 text-inc-cyan',
  'in-development': 'bg-inc-violet/20 text-inc-violet',
  'concept': 'bg-inc-zinc text-inc-silver',
};

const statusLabels: Record<string, string> = {
  'launched': 'ðŸš€ Launched',
  'beta': 'ðŸ§ª Beta',
  'in-development': 'ðŸ”¨ Building',
  'concept': 'ðŸ’¡ Concept',
};
---

<article class="card-dark p-6 flex flex-col h-full group">
  <div class="flex items-start justify-between mb-4">
    <div class="w-12 h-12 bg-inc-steel rounded-lg flex items-center justify-center">
      <span class="text-2xl">âš¡</span>
    </div>
    <span class={`px-2 py-1 text-xs font-mono uppercase tracking-wider rounded ${statusColors[status] || statusColors['concept']}`}>
      {statusLabels[status] || status}
    </span>
  </div>
  
  <h3 class="font-display text-xl text-inc-white mb-2 group-hover:text-inc-lime transition-colors">
    {title}
  </h3>
  
  <p class="text-inc-silver text-sm mb-4 flex-1">
    {tagline}
  </p>
  
  <div class="flex flex-wrap gap-2 mb-6">
    {techStack.slice(0, 4).map((tech) => (
      <span class="px-2 py-1 bg-inc-steel text-inc-silver text-xs font-mono rounded">
        {tech}
      </span>
    ))}
  </div>
  
  <div class="flex items-center gap-4 pt-4 border-t border-inc-steel">
    <a 
      href={`/projects/${slug}`}
      class="text-sm text-inc-silver hover:text-inc-lime transition-colors"
    >
      Learn more â†’
    </a>
    {liveUrl && (
      <a 
        href={liveUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="text-sm text-inc-lime hover:underline flex items-center gap-1"
      >
        Visit
        <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    )}
  </div>
</article>
