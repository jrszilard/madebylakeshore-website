---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/services', label: 'Services' },
  { href: '/work', label: 'Work' },
  { href: '/case-studies', label: 'Case Studies' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];

const brandLinks = [
  { href: 'https://designandotherstories.com', label: 'Art & Handmade', external: true },
  { href: 'https://incubator.madebylakeshore.com', label: 'Incubator', external: true },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-mbl-cloud/80 backdrop-blur-md border-b border-mbl-mist/50">
  <nav class="container-wide">
    <div class="flex items-center justify-between h-18">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <div class="w-10 h-10 bg-mbl-ink rounded-md flex items-center justify-center group-hover:bg-mbl-accent transition-colors duration-200">
          <span class="text-white font-display text-lg">L</span>
        </div>
        <div class="hidden sm:block">
          <span class="font-heading font-semibold text-mbl-ink">MadeByLakeshore</span>
        </div>
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-8">
        {navLinks.map((link) => (
          <a 
            href={link.href}
            class:list={[
              "font-heading text-sm font-medium link-underline transition-colors duration-200",
              currentPath === link.href || currentPath.startsWith(link.href + '/') 
                ? "text-mbl-accent" 
                : "text-mbl-stone hover:text-mbl-ink"
            ]}
          >
            {link.label}
          </a>
        ))}
      </div>
      
      <!-- Brand Switcher & CTA -->
      <div class="hidden lg:flex items-center gap-6">
        <div class="relative group">
          <button class="flex items-center gap-1 text-sm text-mbl-stone hover:text-mbl-ink font-heading">
            Our Brands
            <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="absolute top-full right-0 mt-2 w-56 py-2 bg-white rounded-lg shadow-lg border border-mbl-mist/50 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            {brandLinks.map((link) => (
              <a 
                href={link.href}
                target={link.external ? "_blank" : undefined}
                rel={link.external ? "noopener noreferrer" : undefined}
                class="flex items-center gap-2 px-4 py-2 text-sm text-mbl-stone hover:text-mbl-ink hover:bg-mbl-mist/30 transition-colors"
              >
                {link.label}
                {link.external && (
                  <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                )}
              </a>
            ))}
          </div>
        </div>
        
        <a href="/contact" class="btn-primary text-sm">
          Start a Project
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-btn"
        class="lg:hidden p-2 text-mbl-ink"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </nav>
  
  <!-- Mobile Menu -->
  <div id="mobile-menu" class="lg:hidden hidden border-t border-mbl-mist/50 bg-white">
    <div class="container-wide py-4 space-y-4">
      {navLinks.map((link) => (
        <a 
          href={link.href}
          class="block py-2 font-heading text-mbl-stone hover:text-mbl-ink transition-colors"
        >
          {link.label}
        </a>
      ))}
      <hr class="border-mbl-mist" />
      <p class="text-xs text-mbl-stone uppercase tracking-wider">Our Brands</p>
      {brandLinks.map((link) => (
        <a 
          href={link.href}
          target={link.external ? "_blank" : undefined}
          class="block py-2 font-heading text-mbl-stone hover:text-mbl-ink transition-colors"
        >
          {link.label}
        </a>
      ))}
      <a href="/contact" class="btn-primary text-sm w-full justify-center mt-4">
        Start a Project
      </a>
    </div>
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-18"></div>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
