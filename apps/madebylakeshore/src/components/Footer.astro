---
const currentYear = new Date().getFullYear();

const footerLinks = {
  services: [
    { href: '/services/design', label: 'Design Consulting' },
    { href: '/services/data', label: 'Data & Analytics' },
    { href: '/services/ai', label: 'AI Solutions' },
  ],
  company: [
    { href: '/about', label: 'About Us' },
    { href: '/work', label: 'Our Work' },
    { href: '/case-studies', label: 'Case Studies' },
    { href: '/contact', label: 'Contact' },
  ],
  brands: [
    { href: 'https://designandotherstories.com', label: 'Design & Other Stories', external: true },
    { href: '/incubator', label: 'Incubator at Lakeshore', external: false },
  ],
};
---

<footer class="bg-mbl-ink text-white">
  <div class="container-wide section-spacing">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href="/" class="flex items-center gap-3 mb-6">
          <div class="w-10 h-10 bg-white rounded-md flex items-center justify-center">
            <span class="text-mbl-ink font-display text-lg">L</span>
          </div>
          <span class="font-heading font-semibold">MadeByLakeshore</span>
        </a>
        <p class="text-mbl-mist/80 text-sm leading-relaxed mb-6">
          Strategic consulting in design, data, and AI. We help businesses transform through thoughtful solutions.
        </p>
        <div class="flex gap-4">
          <a href="https://linkedin.com" target="_blank" rel="noopener noreferrer" class="text-mbl-mist/60 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a href="https://twitter.com" target="_blank" rel="noopener noreferrer" class="text-mbl-mist/60 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Services -->
      <div>
        <h4 class="font-heading font-semibold text-sm uppercase tracking-wider mb-6">Services</h4>
        <ul class="space-y-3">
          {footerLinks.services.map((link) => (
            <li>
              <a href={link.href} class="text-mbl-mist/80 hover:text-white text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Company -->
      <div>
        <h4 class="font-heading font-semibold text-sm uppercase tracking-wider mb-6">Company</h4>
        <ul class="space-y-3">
          {footerLinks.company.map((link) => (
            <li>
              <a href={link.href} class="text-mbl-mist/80 hover:text-white text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Our Brands -->
      <div>
        <h4 class="font-heading font-semibold text-sm uppercase tracking-wider mb-6">Our Brands</h4>
        <ul class="space-y-3">
          {footerLinks.brands.map((link) => (
            <li>
              <a 
                href={link.href} 
                target={link.external ? "_blank" : undefined}
                rel={link.external ? "noopener noreferrer" : undefined}
                class="text-mbl-mist/80 hover:text-white text-sm transition-colors inline-flex items-center gap-1"
              >
                {link.label}
                {link.external && (
                  <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="mt-16 pt-8 border-t border-white/10 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-mbl-mist/60 text-sm">
        Â© {currentYear} MadeByLakeshore. All rights reserved.
      </p>
      <div class="flex gap-6 text-sm">
        <a href="/privacy" class="text-mbl-mist/60 hover:text-white transition-colors">Privacy</a>
        <a href="/terms" class="text-mbl-mist/60 hover:text-white transition-colors">Terms</a>
      </div>
    </div>
  </div>
</footer>
