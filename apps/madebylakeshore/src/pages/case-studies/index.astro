---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { sanityClient, urlFor, queries } from '@lakeshore/shared-ui/sanity';

// Fetch case studies from Sanity
const sanityCaseStudies = await sanityClient.fetch(queries.allCaseStudies);
const caseStudies = sanityCaseStudies.map((study: any) => ({
  slug: study.slug?.current,
  title: study.title,
  client: study.client || '',
  category: study.category || 'design',
  author: study.author?.name || '',
  duration: '', // Not in schema, optional
  heroImage: study.featuredImage?.asset ? urlFor(study.featuredImage).width(800).url() : null,
  excerpt: study.excerpt || '',
  results: study.metrics?.slice(0, 3) || [], // Use metrics for results display
}));

const categoryColors: Record<string, string> = {
  design: 'bg-mbl-warm/10 text-mbl-warm',
  data: 'bg-mbl-accent/10 text-mbl-accent',
  ai: 'bg-purple-100 text-purple-600',
};
---

<BaseLayout 
  title="Case Studies" 
  description="In-depth looks at how we've helped businesses solve complex challenges with design, data, and AI."
>
  <!-- Hero -->
  <section class="section-spacing">
    <div class="container-wide">
      <div class="max-w-3xl">
        <p class="font-heading text-mbl-accent font-medium tracking-wide mb-4 animate-slide-up opacity-0" style="animation-delay: 0.1s;">
          Case Studies
        </p>
        <h1 class="text-display-lg mb-6 animate-slide-up opacity-0" style="animation-delay: 0.2s;">
          Stories of <span class="text-gradient">transformation</span>
        </h1>
        <p class="text-xl text-mbl-stone leading-relaxed animate-slide-up opacity-0" style="animation-delay: 0.3s;">
          Deep dives into our most impactful projects. Learn about the challenges, 
          our approach, and the results we achieved together with our clients.
        </p>
      </div>
    </div>
  </section>

  <!-- Case Studies List -->
  <section class="pb-20">
    <div class="container-wide">
      <div class="space-y-16">
        {caseStudies.map((study: any, index: number) => (
          <a 
            href={`/case-studies/${study.slug}`}
            class="group block"
          >
            <article class="grid lg:grid-cols-2 gap-8 lg:gap-16 items-center">
              <!-- Image -->
              <div class={`relative aspect-[4/3] rounded-lg overflow-hidden bg-mbl-mist ${index % 2 === 1 ? 'lg:order-2' : ''}`}>
                {study.heroImage ? (
                  <img src={study.heroImage} alt={study.title} class="w-full h-full object-cover" />
                ) : (
                  <div class="absolute inset-0 bg-gradient-to-br from-mbl-slate to-mbl-ink opacity-80"></div>
                )}

                <div class="absolute inset-0 bg-mbl-accent/0 group-hover:bg-mbl-accent/10 transition-colors duration-300"></div>

                <!-- Category badge -->
                <div class="absolute top-4 left-4">
                  <span class={`px-3 py-1 rounded-full text-xs font-heading font-medium ${categoryColors[study.category]}`}>
                    {study.category.charAt(0).toUpperCase() + study.category.slice(1)}
                  </span>
                </div>
              </div>
              
              <!-- Content -->
              <div class={index % 2 === 1 ? 'lg:order-1' : ''}>
                <div class="flex items-center gap-4 mb-4 flex-wrap">
                  {study.client && <span class="text-sm text-mbl-stone">{study.client}</span>}
                  {study.client && study.author && <span class="text-mbl-mist">â€¢</span>}
                  {study.author && <span class="text-sm text-mbl-stone">with {study.author}</span>}
                </div>
                
                <h2 class="font-display text-2xl lg:text-3xl mb-4 group-hover:text-mbl-accent transition-colors duration-300">
                  {study.title}
                </h2>
                
                <p class="text-lg text-mbl-stone mb-8">
                  {study.excerpt}
                </p>
                
                <!-- Results -->
                {study.results && study.results.length > 0 && (
                  <div class="grid grid-cols-3 gap-6 mb-8">
                    {study.results.map((result: any) => (
                      <div>
                        <div class="text-2xl lg:text-3xl font-display text-mbl-accent mb-1">
                          {result.value}
                        </div>
                        <div class="text-sm text-mbl-stone">
                          {result.label}
                        </div>
                      </div>
                    ))}
                  </div>
                )}
                
                <span class="inline-flex items-center gap-2 font-heading font-medium text-mbl-ink group-hover:text-mbl-accent transition-colors">
                  Read full case study
                  <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </span>
              </div>
            </article>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section-spacing bg-white">
    <div class="container-wide">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-display mb-6">Want results like these?</h2>
          <p class="text-lg text-mbl-stone mb-8">
            Every business is different, but the approach is the same: understand the 
            challenge deeply, develop a strategic solution, and execute with precision. 
            Let's talk about what we can achieve together.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="/contact" class="btn-primary">
              Start a Project
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
            <a href="/services" class="btn-secondary">
              Explore Services
            </a>
          </div>
        </div>
        
        <div class="grid grid-cols-2 gap-4">
          <div class="p-6 bg-mbl-cloud rounded-lg text-center">
            <div class="text-4xl font-display text-mbl-accent mb-2">50+</div>
            <div class="text-sm text-mbl-stone">Projects Delivered</div>
          </div>
          <div class="p-6 bg-mbl-cloud rounded-lg text-center">
            <div class="text-4xl font-display text-mbl-accent mb-2">98%</div>
            <div class="text-sm text-mbl-stone">Client Satisfaction</div>
          </div>
          <div class="p-6 bg-mbl-cloud rounded-lg text-center">
            <div class="text-4xl font-display text-mbl-accent mb-2">5+</div>
            <div class="text-sm text-mbl-stone">Years Experience</div>
          </div>
          <div class="p-6 bg-mbl-cloud rounded-lg text-center">
            <div class="text-4xl font-display text-mbl-accent mb-2">3</div>
            <div class="text-sm text-mbl-stone">Service Areas</div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>